    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "graphql-import-node": "^0.0.4",
    "graphql-playground-middleware-express": "^1.7.23",
    "graphql-tools": "^8.2.1",
    "http": "^0.0.1-security",
    "lodash": "^4.17.21",
    "ncp": "^2.0.0",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
